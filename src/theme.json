{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "blocks": {
      "core/navigation": {
        "elements": {
          "link": {
            "typography": {
              "text-decoration": "underline"
            }
          }
        }
      },
      "core/button": {
        "color": {
          "background": "var(--wp--preset--color--smokey)",
          "text": "var(--wp--preset--color--white)"
        }
      },
      "core/heading": {
        "color": {
          "palette": [
            {
              "slug": "smokeyX",
              "color": "#333333",
              "name": "Web SmokeyX"
            }
          ]
        }
      }
    },
    "color": {
      "custom": false,
      "defaultPalette": false,
      "palette": [
        {
          "slug": "orange",
          "color": "#ff8200",
          "name": "Orange"
        },
        {
          "slug": "smokey",
          "color": "#4b4b4b",
          "name": "Web Smokey"
        },
        {
          "slug": "smokeyX",
          "color": "#333333",
          "name": "Web SmokeyX"
        },
        {
          "slug": "light",
          "color": "#f6f6f6",
          "name": "Light"
        },
        {
          "slug": "gray2",
          "color": "#e0e0e0",
          "name": "Gray 2"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "White"
        }
      ]
    },
    "layout": {
      "contentSize": "900px",
      "wideSize": "80vw"
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Helvetica Neue, Helvetica, Arial, sans-serif",
          "slug": "helvetica-arial",
          "name": "Helvetica or Arial"
        }
      ]
    }
  },
  "styles": {
    "blocks": {
      "core/button": {
        "color": {
          "background": "var(--wp--preset--color--smokey)",
          "text": "var(--wp--preset--color--white)"
        },
        "border": {
          "radius": ".45rem",
          "width": ".2rem",
          "color": "var(--wp--preset--color--orange)"
        }
      },
      "core/cover": {}
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--helvetica-arial)",
      "lineHeight": "1.5"
    },
    "color": {
      "text": "var(--wp--preset--color--smokey)"
    }
  }
}
